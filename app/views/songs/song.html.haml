#hud
  #song_wrapper

#keyboard_wrapper
  #key_groups
  .clear


.the_controls
  - if user_signed_in? && current_user.admin?
    .btn.btn-danger.start_recording
      %i.icon-volume-up

    .btn.btn-info.play_recording
      %i.icon-play

    %br/
  
    .btn.btn-info.learn
      %i.icon-star

    .btn.btn-info.save_song
      %i.icon-arrow-down

    %br/
    = text_field_tag 'song[title]', @song.title, :placeholder => 'Title', :id => 'song_title'
    %br/
    = text_field_tag 'song[artist]', @song.artist, :placeholder => 'Artist', :id => 'song_artist'

= javascript_tag "$(function(){ P.initialize({songs: #{@songs.to_json}, song: #{@song.present? ? @song.to_json : {}}, user: #{user_signed_in? && current_user.present? ? current_user.to_json : '{}'}, show_play_modal: #{@show_play_modal ? true : false} }); });"

= render 'songs/play_modal'